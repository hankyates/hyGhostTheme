{{!< default}}

<article class="{{post_class}}">
    {{#post}}

        <span class="post-meta {{tags}}"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{tags prefix="in " separator=" | "}}</span>

        <h1 class="post-title">{{{title}}}</h1>

        <section class="post-content">
            {{content}}
        </section>

        <div class="post-footer">
            <section class="author">
                <h4>My name is {{author.name}}</h4>
                <img width="80" height="80" src="http://www.gravatar.com/avatar/2b25725ad1d27ab6d0b467cc841581e0">
                <span>{{author.bio}}</span>
            </section>

            <section class="share">
                <h4>Share this post</h4>
                <a class="icon-twitter" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <i class="icon-large icon-twitter"></i>
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <i class="icon-large icon-facebook"></i>
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <i class="icon-large icon-google-plus"></i>
                </a>
            </section>
        </div>
    {{/post}}
</article>
